<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="64dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/transaction" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtIdTransaction"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="DH.001"
                android:textColor="#131212"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtNameCustomerTransaction"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Chị Mỹ" />

            <TextView
                android:id="@+id/txtTransactionTime"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="21:31  17/9/2020" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPriceCourseTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="15.000.000 VNĐ" />

            <TextView
                android:id="@+id/txtStatusTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Đã thanh toán"
                android:textColor="@color/colorGreen" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
