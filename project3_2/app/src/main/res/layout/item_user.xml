<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="64dp">

            <ImageView
                android:id="@+id/imageViewUserList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/unnamed" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:text="Ten Nhan Vien"
                android:textColor="#3C3737"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPhoneUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SĐT" />

            <TextView
                android:id="@+id/txtEmailUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email" />
        </LinearLayout>
<!--        <TextView-->
<!--            android:id="@+id/txtRoleUser"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:gravity="center"-->
<!--            android:text="Nhân viên CSKH"-->
<!--            android:layout_marginRight="8dp"-->
<!--            android:background="@drawable/bg_black_border"/>-->
    </LinearLayout>

</LinearLayout>
