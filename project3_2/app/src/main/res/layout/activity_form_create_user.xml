<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FormCreateUser">

    <include
        android:id="@+id/toolbar_common"
        layout="@layout/toolbar_common"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imgUserCreate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/unnamed"
                />
        </androidx.cardview.widget.CardView>


        <EditText

            android:id="@+id/txtNameUserCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Tên Nhân Viên"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:text="" />

        <EditText
            android:id="@+id/txtPhoneUserCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:padding="8dp" />

        <EditText
            android:id="@+id/txtPasswordUserCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Password"
            android:inputType="text"
            android:padding="8dp" />
        <EditText
            android:id="@+id/txtEmailUserCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp" />

        <EditText
            android:id="@+id/txtAddressUserCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Địa chỉ"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vai trò:"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

            <Button
                android:layout_marginTop="64dp"
                android:id="@+id/btnAddUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hover_button"
                android:onClick="addUser"
                android:text="Lưu"
                android:textColor="@color/colorBlue"
                 />

    </LinearLayout>


</LinearLayout>